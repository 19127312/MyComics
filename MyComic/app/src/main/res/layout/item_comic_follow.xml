<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bd_comic"
    android:layout_margin="8dp"
    >

    <ImageView
        android:id="@+id/thumbnailImgFollow"
        android:layout_width="154dp"
        android:layout_height="243dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comicNameFollowTV"
        android:layout_width="152dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="TextView"
        android:fontFamily="@font/baron_neue_black"
        app:layout_constraintEnd_toEndOf="@+id/thumbnailImgFollow"
        app:layout_constraintStart_toStartOf="@+id/thumbnailImgFollow"
        app:layout_constraintTop_toBottomOf="@+id/thumbnailImgFollow" />

    <ImageView
        android:id="@+id/deleteFollowBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/thumbnailImgFollow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>