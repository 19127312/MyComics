<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollRoot"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".adminScreen.DetailComicAdminActivity">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

            android:text="Change description"
            app:layout_constraintStart_toStartOf="@+id/authorComicET"
            app:layout_constraintTop_toBottomOf="@+id/authorComicET" />

        <EditText
            android:id="@+id/authorComicET"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/bd_et"

            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Change author"
            app:layout_constraintStart_toStartOf="@+id/changeThumbnailBtn"
            app:layout_constraintTop_toBottomOf="@+id/nameComicET" />

        <ImageView
            android:id="@+id/thumbnailEditImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/changeThumbnailBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"

            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Change thumbnail"
            app:layout_constraintStart_toStartOf="@+id/thumbnailEditImageView"
            app:layout_constraintTop_toBottomOf="@+id/thumbnailEditImageView" />

        <EditText
            android:id="@+id/nameComicET"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/bd_et"
            android:ems="10"

            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Change name"
            app:layout_constraintStart_toStartOf="@+id/changeThumbnailBtn"
            app:layout_constraintTop_toBottomOf="@+id/changeThumbnailBtn" />

        <Button
            android:id="@+id/updateNameComicBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Update"
            app:layout_constraintBottom_toBottomOf="@+id/nameComicET"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nameComicET"
            app:layout_constraintTop_toTopOf="@+id/nameComicET"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/updateAuthorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="update"
            app:layout_constraintBottom_toBottomOf="@+id/authorComicET"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/authorComicET"
            app:layout_constraintTop_toTopOf="@+id/authorComicET"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/descriptionChangeET"
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/bd_et"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/updateDescriptionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="update"
            app:layout_constraintBottom_toBottomOf="@+id/descriptionChangeET"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toEndOf="@+id/descriptionChangeET"
            app:layout_constraintTop_toTopOf="@+id/descriptionChangeET"
            app:layout_constraintVertical_bias="0.513" />

        <Button
            android:id="@+id/addChapterBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Add new chapter"
            app:layout_constraintEnd_toEndOf="@+id/descriptionChangeET"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/descriptionChangeET"
            app:layout_constraintTop_toBottomOf="@+id/descriptionChangeET" />

        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/item_chapter_admin"
            android:id="@+id/chapterRecycleView"
            android:layout_width="match_parent"
            android:layout_height="448dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addChapterBtn" />

        <Button
            android:id="@+id/watchCommentBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:text="Go to comments"
            app:layout_constraintBottom_toBottomOf="@+id/addChapterBtn"
            app:layout_constraintEnd_toEndOf="@+id/updateDescriptionBtn"
            app:layout_constraintTop_toTopOf="@+id/addChapterBtn"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/uploadThumbnailBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Update thumbnail"
            app:layout_constraintBottom_toBottomOf="@+id/changeThumbnailBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toEndOf="@+id/changeThumbnailBtn"
            app:layout_constraintTop_toTopOf="@+id/changeThumbnailBtn"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
