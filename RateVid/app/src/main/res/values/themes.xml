<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RateVid" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="NormalEditText" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/rounded_edittext</item>
        <item name="paddingStart">10dp</item>
    </style>
    <style name="Theme.Comics.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="boxBackgroundColor">#FFF</item>
        <item name="boxStrokeColor">#FFF</item>
        <item name="strokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="errorTextColor">#FF0000</item>
    </style>
    <style name="Theme.Moments.TextInputLayout.Password" parent="Theme.Comics.TextInputLayout">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">#C3C3C3</item>
        <item name="passwordToggleDrawable">@drawable/hide_show_password</item>
    </style>
</resources>